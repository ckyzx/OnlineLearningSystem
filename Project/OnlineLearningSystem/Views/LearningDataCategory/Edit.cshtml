@model OnlineLearningSystem.Models.LearningDataCategory
@{
    ViewBag.Title = "编辑资料目录";
    Layout = "~/Views/Shared/_PageEdit.cshtml";
}
<div class="pd-20">
    @using (Html.BeginForm("Edit", "LearningDataCategory", FormMethod.Post, new { name = "edit", @class = "form form-horizontal" }))
    {
        @Html.ValidationSummary(true)
        @Html.HiddenFor(m => m.LDC_Id)
        @Html.HiddenFor(m => m.LDC_AutoId)
        @Html.HiddenFor(m => m.LDC_AddTime)
        @Html.HiddenFor(m => m.LDC_Sort)
        <div class="row cl">
            <label class="form-label col-2">
                @Html.LabelFor(m => m.LDC_Status)    
            </label>
            <div class="formControls col-2">
                <span class="select-box">
                    @Html.EditorFor(m => m.LDC_Status, "Status")
                </span>
                @Html.ValidationMessageFor(m => m.LDC_Status)
            </div>
        </div>
        <div class="row cl">
            <label class="form-label col-2">
                @Html.LabelFor(m => m.LDC_Name)
            </label>
            <div class="formControls col-2">
                @Html.TextBoxFor(m => m.LDC_Name, new { @class = "input-text" })
                @Html.ValidationMessageFor(m => m.LDC_Name)
            </div>
        </div>
        <div class="row cl">
            <label class="form-label col-2">
                @Html.LabelFor(m => m.LDC_Remark)
            </label>
            <div class="formControls col-4">
                @Html.TextAreaFor(m => m.LDC_Remark, new { @class = "textarea" })
                @Html.ValidationMessageFor(m => m.LDC_Remark)
            </div>
        </div>
        <div class="row cl">
            <div class="col-10 col-offset-2">
                <input class="btn btn-primary radius" type="submit" value="&nbsp;&nbsp;保存&nbsp;&nbsp;" />
                <button onclick="layer_close();" class="btn btn-default radius" type="button">
                    &nbsp;&nbsp;取消&nbsp;&nbsp;</button>
            </div>
        </div>
    }
</div>
