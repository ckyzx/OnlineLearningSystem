@model List<OnlineLearningSystem.Models.ActionPermission>
@{
    ViewBag.Title = "操作权限";
    Layout = "~/Views/Shared/_Page.cshtml";
}
<nav class="breadcrumb"><i class="Hui-iconfont">&#xe67f;</i> 系统 <span class="c-gray en">&gt;</span> 操作权限 <a class="btn btn-success radius r mr-20" style="line-height:1.6em;margin-top:3px" href="javascript:location.replace(location.href);" title="刷新" ><i class="Hui-iconfont">&#xe68f;</i></a></nav>
<div class="pd-20">
    <div class="cl pd-5 bg-1 bk-gray">
    </div>
    <div class="mt-20">
        <table class="table table-border table-bordered table-bg table-hover table-sort">
            <thead>
                <tr>
                    <th class="text-c" style="width:10px;">
                        <input type="checkbox" name="" value="" />
                    </th>
                    <th>
                        控制器
                    </th>
                    <th>
                        行为
                    </th>
                    <th>
                        描述
                    </th>
                </tr>
            </thead>
            <tbody>
            @foreach(var item in Model)
            {
                <tr>
                    <td class="text-c">
                        <input type="checkbox" name="" value="" />
                    </td>
                    <td>@item.ControllerName</td>
                    <td>@item.ActionName</td>
                    <td>@item.Description</td>
                </tr>
            }
            </tbody>
        </table>
    </div>
    <div class="cl"></div>
</div>
<script type="text/javascript" src="@Url.Content("~/Contents/lib/js.datetime.js")"></script>
<script type="text/javascript" src="@Url.Content("~/Contents/lib/My97DatePicker/WdatePicker.js")"></script>
<script type="text/javascript" src="@Url.Content("~/Contents/lib/datatables/1.10.9/jquery.dataTables.min.js")"></script>
<!--script type="text/javascript" src="http://cdn.bootcss.com/datatables/1.10.9/js/jquery.dataTables.js"></script-->
<script type="text/javascript" src="@Url.Content("~/Contents/js/ActionPermission/List.js")"></script>

