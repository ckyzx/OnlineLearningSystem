@model OnlineLearningSystem.Models.ExaminationTaskTemplate
@{
    ViewBag.Title = "添加任务模板";
    Layout = "~/Views/Shared/_PageEdit.cshtml";
}
<div class="pd-20">
    @using (Html.BeginForm("Create", "ExaminationTaskTemplate", FormMethod.Post, new { name = "create", @class = "form form-horizontal" }))
    {
        @Html.ValidationSummary(true)
        @Html.HiddenFor(m => m.ETT_Id)
        @Html.HiddenFor(m => m.ETT_AutoId)
        @Html.HiddenFor(m => m.ETT_AddTime)
        <div class="row cl">
            <label class="form-label col-2">
                @Html.LabelFor(m => m.ETT_Status)
            </label>
            <div class="formControls col-2">
                <span class="select-box">
                    @Html.EditorFor(m => m.ETT_Status, "Status")
                </span>
                @Html.ValidationMessageFor(m => m.ETT_Status)
            </div>
        </div>
        <div class="row cl">
            <label class="form-label col-2">
                @Html.LabelFor(m => m.ETT_Name)
            </label>
            <div class="formControls col-2">
                @Html.TextBoxFor(m => m.ETT_Name, new { @class = "input-text" })
                @Html.ValidationMessageFor(m => m.ETT_Name)
            </div>
        </div>
        <div class="row cl">
            <label class="form-label col-2">
                @Html.LabelFor(m => m.ETT_Type)
            </label>
            <div class="formControls col-2">
                <span class="select-box">
                    @Html.EditorFor(m => m.ETT_Type, "ExaminationTaskType")
                </span>
                @Html.ValidationMessageFor(m => m.ETT_Type)
            </div>
        </div>
        <div class="row cl">
            <label class="form-label col-2">
                @Html.LabelFor(m => m.ETT_Attendee)
            </label>
            <div class="formControls col-10">
                <ul id="DepartmentsAndUsers" class="ztree" data-value='@ViewBag.DepartmentsAndUsers'>
                </ul>
                <div class="cl"></div>
                @Html.HiddenFor(m => m.ETT_ParticipatingDepartment)
                @Html.ValidationMessageFor(m => m.ETT_ParticipatingDepartment)
                <div class="cl"></div>
                @Html.HiddenFor(m => m.ETT_Attendee)
                @Html.ValidationMessageFor(m => m.ETT_Attendee)
            </div>
        </div>
        <div class="row cl">
            <label class="form-label col-2">
                @Html.LabelFor(m => m.ETT_StatisticType)
            </label>
            <div class="formControls col-2">
                <span class="select-box">
                    @Html.EditorFor(m => m.ETT_StatisticType, "ExaminationTaskStatisticType")
                </span>
                @Html.ValidationMessageFor(m => m.ETT_StatisticType)
            </div>
        </div>
        <div class="row cl" style="display:none;">
            <label class="form-label col-2">
                @Html.LabelFor(m => m.ETT_TotalScore)
            </label>
            <div class="formControls col-2">
                @Html.TextBoxFor(m => m.ETT_TotalScore, new { @class = "input-text" })
                @Html.ValidationMessageFor(m => m.ETT_TotalScore)
            </div>
        </div>
        <div class="row cl" style="display:none;">
            <label class="form-label col-2">
                @Html.LabelFor(m => m.ETT_TotalNumber)
            </label>
            <div class="formControls col-2">
                @Html.TextBoxFor(m => m.ETT_TotalNumber, new { @class = "input-text" })
                @Html.ValidationMessageFor(m => m.ETT_TotalNumber)
            </div>
        </div>
        <div class="row cl">
            <label class="form-label col-2">
                @Html.LabelFor(m => m.ETT_Mode)
            </label>
            <div class="formControls col-2">
                <span class="select-box">
                    @Html.EditorFor(m => m.ETT_Mode, "ExaminationTaskMode")
                </span>
                @Html.ValidationMessageFor(m => m.ETT_Mode)
            </div>
        </div>
        <div class="row cl" style="display:none;">
            <label class="form-label col-2">
                @Html.LabelFor(m => m.ETT_AutoType)
            </label>
            <div class="formControls col-2">
                <span class="select-box">
                    @Html.EditorFor(m => m.ETT_AutoType, "ExaminationTaskAutoType")
                </span>
                @Html.ValidationMessageFor(m => m.ETT_AutoType)
            </div>
        </div>
        <div class="row cl" style="display:none;">
            <label class="form-label col-2">
                @Html.LabelFor(m => m.ETT_AutoOffsetDay)
            </label>
            <div class="formControls col-2">
                <div id="AutoOffsetDayContainer"></div>
                @Html.HiddenFor(m => m.ETT_AutoOffsetDay)
                @Html.ValidationMessageFor(m => m.ETT_AutoOffsetDay)
            </div>
        </div>
        <div class="row cl" style="display:none;">
            <label class="form-label col-2">
                @Html.LabelFor(m => m.ETT_DifficultyCoefficient)
            </label>
            <div class="formControls col-2">
                <span class="select-box">
                    @Html.EditorFor(m => m.ETT_DifficultyCoefficient, "ExaminationTaskDifficultyCoefficient")
                </span>
                @Html.ValidationMessageFor(m => m.ETT_DifficultyCoefficient)
            </div>
        </div>
        <div class="row cl" style="display:none;">
            <label class="form-label col-2">
                @Html.LabelFor(m => m.ETT_AutoClassifies)
            </label>
            <div class="formControls col-10">
                <ul id="QuestionClassifies" class="ztree" data-value='@ViewBag.QuestionClassifies'>
                </ul>
                <div class="cl"></div>
                @Html.HiddenFor(m => m.ETT_AutoClassifies)
                @Html.ValidationMessageFor(m => m.ETT_AutoClassifies)
            </div>
        </div>
        <div class="row cl" style="display:none;">
            <label class="form-label col-2">
                @Html.LabelFor(m => m.ETT_AutoRatio)
            </label>
            <div class="formControls col-10">
                <div id="RatioContainer"></div>
                @Html.HiddenFor(m => m.ETT_AutoRatio)
                @Html.ValidationMessageFor(m => m.ETT_AutoRatio)
            </div>
        </div>
        <div class="row cl" style="display:none;">
            <label class="form-label col-2">
                @Html.LabelFor(m => m.ETT_StartTime)
            </label>
            <div class="formControls col-2">
                <div id="StartTime" class="time-picker"></div>
                @Html.HiddenFor(m => m.ETT_StartTime)
                @Html.ValidationMessageFor(m => m.ETT_StartTime)
            </div>
        </div>
        <div class="row cl" style="display:none;">
            <label class="form-label col-2">
                @Html.LabelFor(m => m.ETT_EndTime)
            </label>
            <div class="formControls col-2">
                <div id="EndTime" class="time-picker"></div>
                @Html.HiddenFor(m => m.ETT_EndTime)
                @Html.ValidationMessageFor(m => m.ETT_EndTime)
            </div>
        </div>
        <div class="row cl" style="display:none;">
            <label class="form-label col-2">
                @Html.LabelFor(m => m.ETT_ContinuedDays)
            </label>
            <div class="formControls col-1">
                @Html.TextBoxFor(m => m.ETT_ContinuedDays, new { @class = "input-text" })
                @Html.ValidationMessageFor(m => m.ETT_ContinuedDays)
            </div>
        </div>
        <div class="row cl">
            <label class="form-label col-2">
                @Html.LabelFor(m => m.ETT_TimeSpan)
            </label>
            <div class="formControls col-1">
                @Html.TextBoxFor(m => m.ETT_TimeSpan, new { @class = "input-text" }) <div>（单位：分钟）</div>
                @Html.ValidationMessageFor(m => m.ETT_TimeSpan)
            </div>
        </div>
        <div class="row cl">
            <label class="form-label col-2">
                @Html.LabelFor(m => m.ETT_Remark)
            </label>
            <div class="formControls col-4">
                @Html.TextAreaFor(m => m.ETT_Remark, new { @class = "textarea" })
                @Html.ValidationMessageFor(m => m.ETT_Remark)
            </div>
        </div>
        <div class="row cl">
            <div class="col-10 col-offset-2">
                <input class="btn btn-primary radius" type="submit" value="&nbsp;&nbsp;保存&nbsp;&nbsp;" />
                <button onclick="layer_close();" class="btn btn-default radius" type="button">
                    &nbsp;&nbsp;取消&nbsp;&nbsp;</button>
            </div>
        </div>
    }
</div>
<script type="text/javascript" src="@Url.Content("~/Contents/lib/js.datetime.js")"></script>
<script type="text/javascript" src="@Url.Content("/Contents/lib/jquery.timers-1.2.js")"></script>
<link type="text/css" rel="Stylesheet" href="@Url.Content("/Contents/lib/zTree_v3/css/metroStyle/style.css")" />
<script type="text/javascript" src="@Url.Content("/Contents/lib/zTree_v3/js/jquery.ztree.core-3.5.min.js")"></script>
<script type="text/javascript" src="@Url.Content("/Contents/lib/zTree_v3/js/jquery.ztree.excheck-3.5.min.js")"></script>
<link rel="stylesheet" type="text/css" href="@Url.Content("~/Contents/lib/jtimepicker/css/ui/base/ui.core.css")" />
<link rel="stylesheet" type="text/css" href="@Url.Content("~/Contents/lib/jtimepicker/css/ui/base/ui.theme.css")" />
<link rel="stylesheet" type="text/css" href="@Url.Content("~/Contents/lib/jtimepicker/css/ui/base/ui.slider.css")" />
<link rel="stylesheet" type="text/css" href="@Url.Content("~/Contents/lib/jtimepicker/css/jquery.timepicker.css")" />
<script type="text/javascript" src="@Url.Content("~/Contents/lib/jtimepicker/lib/jquery.jtimepicker.bundle.js")"></script>
<script type="text/javascript" src="@Url.Content("/Contents/js/ExaminationTaskTemplate/Edit.js")"></script>
