@model OnlineLearningSystem.Models.LearningData
@{
    ViewBag.Title = "修改资料";
    Layout = "~/Views/Shared/_PageEdit.cshtml";
}
<div class="pd-20">
    @using (Html.BeginForm("Edit", "LearningData", FormMethod.Post, new { name = "edit", @class = "form form-horizontal" }))
    {
        @Html.ValidationSummary(true)
        @Html.HiddenFor(m => m.LD_Id)
        @Html.HiddenFor(m => m.LD_AutoId)
        @Html.HiddenFor(m => m.LD_AddTime)
        @Html.HiddenFor(m => m.LD_Sort)
        <div class="row cl">
            <label class="form-label col-2">
                @Html.LabelFor(m => m.LD_Status)    
            </label>
            <div class="formControls col-2">
                <span class="select-box">
                    @Html.EditorFor(m => m.LD_Status, "Status")
                </span>
                @Html.ValidationMessageFor(m => m.LD_Status)
            </div>
        </div>
        <div class="row cl">
            <label class="form-label col-2">
                @Html.LabelFor(m => m.LD_Title)
            </label>
            <div class="formControls col-5">
                @Html.TextBoxFor(m => m.LD_Title, new { @class = "input-text" })
                @Html.ValidationMessageFor(m => m.LD_Title)
            </div>
        </div>
        <div class="row cl">
            <label class="form-label col-2">
                @Html.LabelFor(m => m.LDC_Id)    
            </label>
            <div class="formControls col-5">
                <span class="select-box">
                    @Html.DropDownListFor(m => m.LDC_Id, (List<SelectListItem>)ViewBag.categories, new { @class = "select" })
                </span>
                @Html.ValidationMessageFor(m => m.LDC_Id)
            </div>
        </div>
        <div class="row cl">
            <label class="form-label col-2">
                @Html.LabelFor(m => m.LD_Video)
            </label>
            <div class="formControls col-5">
                <div class="uploader-thum-container">
                    <div id="fileList" class="uploader-list">
                    </div>
                    <div id="filePicker">
                        选择视频</div>
                    <button id="btn-star" class="btn btn-default btn-uploadstar radius ml-10">
                        开始上传</button>
                </div>
                @Html.HiddenFor(m => m.LD_Video)
                @Html.ValidationMessageFor(m => m.LD_Video)
            </div>
        </div>
        <div class="row cl">
            <label class="form-label col-2">
                @Html.LabelFor(m => m.LD_Content)
            </label>
            <div class="formControls col-10">
                @Html.Hidden("LearningDataContent", Model.LD_Content)
                @Html.ValidationMessageFor(m => m.LD_Content)
            </div>
        </div>
        <div class="row cl">
            <label class="form-label col-2">
                @Html.LabelFor(m => m.LD_Remark)
            </label>
            <div class="formControls col-4">
                @Html.TextAreaFor(m => m.LD_Remark, new { @class = "textarea" })
                @Html.ValidationMessageFor(m => m.LD_Remark)
            </div>
        </div>
        <div class="row cl">
            <div class="col-10 col-offset-2">
                <input class="btn btn-primary radius" type="submit" value="&nbsp;&nbsp;保存&nbsp;&nbsp;" />
                <button onclick="layer_close();" class="btn btn-default radius" type="button">
                    &nbsp;&nbsp;取消&nbsp;&nbsp;</button>
            </div>
        </div>
    }
</div>
<script type="text/javascript" src="@Url.Content("~/Contents/js/LearningData/Edit.js")"></script>
