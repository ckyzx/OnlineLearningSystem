@{
    ViewBag.Title = "用户成绩";
    Layout = "~/Views/Shared/_Page.cshtml";
}
<nav class="breadcrumb"><i class="Hui-iconfont">&#xe67f;</i> 系统 <span class="c-gray en">&gt;</span> 用户成绩 <a class="btn btn-success radius r mr-20" style="line-height:1.6em;margin-top:3px" href="javascript:location.replace(location.href);" title="刷新" ><i class="Hui-iconfont">&#xe68f;</i></a></nav>
<div class="pd-20">
    <div class="pd-5">
        <span class="mr-5">部&nbsp;&nbsp;&nbsp;&nbsp;门</span>
        <span class="select-box" style="width:160px">
            @Html.DropDownList("Department", (List<SelectListItem>)ViewBag.departments, new { @class = "select", style = "width:148px" })
        </span>
        <button id="SearchBtn" class="btn btn-success mr-5" type="button"><i class="Hui-iconfont">&#xe665;</i> 查询</button>
        <button id="ExportBtn" class="btn btn-success" type="button"><i class="Hui-iconfont">&#xe641;</i> 导出</button>
    </div>        
    <div class="mt-20">
        <table class="table table-border table-bordered table-bg table-hover table-sort">
            <thead>
                <tr>
                    <th class="text-c">
                        <input type="checkbox" name="" value="" />
                    </th>
                    <th>
                        ID
                    </th>
                    <th>
                        用户
                    </th>
                    <th>
                        部门
                    </th>
                    <th>
                        职务
                    </th>
                    <th>
                        应考
                    </th>
                    <th>
                        已考
                    </th>
                    <th>
                        未考
                    </th>
                    <th>
                        合格
                    </th>
                    <th>
                        参考率
                    </th>
                    <th>
                        合格率
                    </th>
                    <th class="text-c">
                        操作
                    </th>
                </tr>
            </thead>
            <tbody>
            </tbody>
        </table>
    </div>
    <div class="cl"></div>
</div>
<script type="text/javascript" src="@Url.Content("~/Content/lib/js.datetime.js")"></script>
<script type="text/javascript" src="@Url.Content("~/Content/lib/datatables/1.10.9/jquery.dataTables.min.js")"></script>
<script type="text/javascript" src="@Url.Content("~/Content/js/custom-enum.js")"></script>
<script type="text/javascript" src="@Url.Content("~/Content/js/UserScore/ListSummary.js")"></script>
